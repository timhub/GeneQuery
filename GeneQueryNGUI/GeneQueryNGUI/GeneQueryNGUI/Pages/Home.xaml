<UserControl x:Class="GeneQueryNGUI.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid Style="{StaticResource ContentRoot}" Loaded="Grid_Loaded">
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{StaticResource home_allcount}" VerticalAlignment="Top" 
                   Margin="68,41,0,0" Height="25" Width="116" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="68,97,0,0" TextWrapping="Wrap" Text="{StaticResource home_allcurrentcount}" 
                   VerticalAlignment="Top" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="208,41,0,0" TextWrapping="Wrap" Text="{Binding AllItemCount}" 
                   VerticalAlignment="Top" FontSize="16" Name="home_allCountTxt"/>
        <TextBlock HorizontalAlignment="Left" Margin="208,97,0,0" TextWrapping="Wrap" Text="{Binding CurrentItemCount}" 
                   VerticalAlignment="Top" FontSize="16" Name="home_allCurrentCountTxt"/>
    </Grid>
</UserControl>
