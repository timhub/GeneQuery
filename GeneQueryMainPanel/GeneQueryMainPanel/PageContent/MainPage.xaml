<Window x:Class="GeneQueryMainPanel.PageContent.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainPage" MinHeight="600" MinWidth="900" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="213*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="8"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="168*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="388*"/>
            <ColumnDefinition Width="305*"/>
            <ColumnDefinition Width="8"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Height="493" Grid.Row="1" VerticalAlignment="Top" Width="168" Grid.Column="1" Grid.RowSpan="3">
            <Button x:Name="mainHomeBtn" Content="首     页" Height="40" BorderBrush="White" Foreground="White" Background="#FF9A3117"/>
            <Button x:Name="mainAddBtn" Content="增加新个体" Height="40" Background="White"/>
            <Button Content="育种分析" Height="40" Background="White"/>
        </StackPanel>
        <TextBlock Grid.Column="3" HorizontalAlignment="Left" Margin="131,0,0,0" TextWrapping="Wrap" Text="登陆成功！" VerticalAlignment="Top" Height="40" Width="123" Background="#FFADE44D" Padding="37,12,0,0" Foreground="White"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Height="28" Margin="2,0,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="376" BorderBrush="#FFBDBDBD" CaretBrush="#FF818181" BorderThickness="1" Padding="1,5,1,1">
            <TextBox.Effect>
                <DropShadowEffect Opacity="0.5" ShadowDepth="2" BlurRadius="3"/>
            </TextBox.Effect>
        </TextBox>
        <Button Content="搜  索" Grid.Column="4" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="28" Background="#FF9A3117" Foreground="White" BorderBrush="{x:Null}">
            <Button.Effect>
                <DropShadowEffect Opacity="0.5" ShadowDepth="3" BlurRadius="3"/>
            </Button.Effect>
        </Button>
        <DataGrid Grid.Column="3" HorizontalAlignment="Left" Margin="2,10,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="2"  Height="406" Width="681" Background="#FFFFFFFE"/>
        <Button Content="切换显示" Grid.Column="4" HorizontalAlignment="Left" Margin="220,0,0,0" Grid.Row="3" VerticalAlignment="Top" Width="75" Background="#FF9A3117" BorderBrush="{x:Null}" Height="34" Foreground="White">
            <Button.Effect>
                <DropShadowEffect ShadowDepth="3" Opacity="0.5"/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
